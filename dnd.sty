    frame hidden,
    before skip=8pt plus2pt,
    breakable,
    after={\vspace{7pt plus 1pt}\noindent},
    #1
}

\newenvironment{itemaction}[1][\unskip]{\emph{\textbf{#1.}}}{\vspace{0.5em}}

% Item Table
\newenvironment{itemtable}{
